    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "semantic-release": "^19.0.2",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
