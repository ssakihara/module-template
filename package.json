{
  "name": "module-template",
  "type": "module",
  "version": "1.0.1",
  "main": "dist/index.js",
  "repository": "https://github.com/ssakihara/module-template",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "volta": {
    "node": "14.17.0",
    "npm": "7.20.5"
  },
